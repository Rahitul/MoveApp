<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CustomerHomeActivity"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="bottom"
        android:padding="32dp"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:background="@drawable/choose_background">

        <LinearLayout
            android:layout_marginTop="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ড্যাসবোর্ড"
                android:textSize="25dp"
                android:textColor="#fff">

            </TextView>

        </LinearLayout>

        <ImageView
            android:layout_marginTop="25dp"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_dashboard_black_24dp">

        </ImageView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="bottom">

        <ImageView
            android:layout_width="180dp"
            android:layout_height="200dp"
            android:src="@drawable/illustration"
            android:layout_gravity="center">

        </ImageView>

        <TextView
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Move Your Destination"
            android:layout_gravity="center"
            android:textSize="16dp"
            android:textColor="#000"
            android:textStyle="bold">

        </TextView>

        <Button
            android:text="প্রোফাইল"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_margin="20dp"
            android:background="@drawable/partner_btn"
            android:id="@+id/Profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/start_btn"
            android:text="শুরু করুন"
            android:textSize="18sp"
            android:textColor="#fff">

        </Button>
    </LinearLayout>



</LinearLayout>